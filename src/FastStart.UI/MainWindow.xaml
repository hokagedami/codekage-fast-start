<Window
    x:Class="FastStart.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:FastStart.UI.ViewModels"
    mc:Ignorable="d"
    Title="FastStart">

    <Grid Background="{ThemeResource LayerFillColorDefaultBrush}" CornerRadius="8">
        <!-- Main Content -->
        <Grid x:Name="MainContent">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

        <!-- Error Bar -->
        <InfoBar x:Name="ErrorBar"
                 Grid.Row="0"
                 IsOpen="{x:Bind ViewModel.IsErrorBarOpen, Mode=TwoWay}"
                 Severity="{x:Bind ViewModel.ErrorSeverity, Mode=OneWay}"
                 Title="{x:Bind ViewModel.ErrorTitle, Mode=OneWay}"
                 Message="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
                 IsClosable="True"/>

        <!-- Search Box and Settings -->
        <Grid Grid.Row="1" Margin="16,12,16,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid>
                <TextBox x:Name="SearchBox"
                         PlaceholderText="Search for apps, settings, and documents"
                         Text="{x:Bind ViewModel.SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         TextChanged="SearchBox_TextChanged"
                         KeyDown="SearchBox_KeyDown"
                         Padding="36,8,12,8"
                         CornerRadius="4"/>
                <FontIcon Glyph="&#xE721;"
                          FontSize="16"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Center"
                          Margin="12,0,0,0"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </Grid>
            <Button x:Name="SettingsButton"
                    Grid.Column="1"
                    Click="SettingsButton_Click"
                    Background="Transparent"
                    Margin="8,0,0,0"
                    Padding="8"
                    ToolTipService.ToolTip="Settings">
                <FontIcon Glyph="&#xE713;" FontSize="16"/>
            </Button>
        </Grid>

        <!-- Search Results View -->
        <ListView Grid.Row="2"
                  Visibility="{x:Bind ViewModel.ShowSearchResults, Mode=OneWay}"
                  ItemsSource="{x:Bind ViewModel.SearchResults}"
                  SelectedItem="{x:Bind ViewModel.SelectedResult, Mode=TwoWay}"
                  IsItemClickEnabled="True"
                  ItemClick="SearchResult_Click"
                  SelectionMode="Single"
                  Margin="8,0,8,8">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="vm:SearchResultViewModel">
                    <Grid Padding="8" ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="32"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image Source="{x:Bind Icon, Mode=OneWay}" Width="32" Height="32"/>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{x:Bind App.Name}" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            <TextBlock Text="{x:Bind App.ExecutablePath}" Style="{StaticResource CaptionTextBlockStyle}" Opacity="0.6" TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Default View: Pinned + Recommended -->
        <ScrollViewer Grid.Row="2"
                      Visibility="{x:Bind ViewModel.ShowDefaultView, Mode=OneWay}"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="16,8,16,16">

                <!-- Pinned Section -->
                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Pinned" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <Button Grid.Column="1"
                            Content="All &gt;"
                            Click="AllApps_Click"
                            Background="Transparent"
                            Padding="8,4"/>
                </Grid>

                <GridView ItemsSource="{x:Bind ViewModel.PinnedApps}"
                          SelectionMode="None"
                          IsItemClickEnabled="True"
                          ItemClick="PinnedApp_Click"
                          Margin="0,0,0,24">
                    <GridView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsWrapGrid Orientation="Horizontal" MaximumRowsOrColumns="6"/>
                        </ItemsPanelTemplate>
                    </GridView.ItemsPanel>
                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="vm:AppViewModel">
                            <StackPanel Width="80" Padding="4" HorizontalAlignment="Center">
                                <StackPanel.ContextFlyout>
                                    <MenuFlyout>
                                        <MenuFlyoutItem Text="Unpin from Start" Click="UnpinApp_Click" Tag="{x:Bind}">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE77A;"/>
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                    </MenuFlyout>
                                </StackPanel.ContextFlyout>
                                <Image Source="{x:Bind Icon, Mode=OneWay}" Width="40" Height="40" Margin="0,0,0,4"/>
                                <TextBlock Text="{x:Bind App.Name}"
                                           HorizontalAlignment="Center"
                                           TextAlignment="Center"
                                           TextTrimming="CharacterEllipsis"
                                           MaxLines="2"
                                           TextWrapping="Wrap"
                                           FontSize="12"/>
                            </StackPanel>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>

                <!-- Recent Section -->
                <TextBlock Text="Recent" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,8"/>

                <GridView ItemsSource="{x:Bind ViewModel.RecentApps}"
                          SelectionMode="None"
                          IsItemClickEnabled="True"
                          ItemClick="RecentApp_Click">
                    <GridView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsWrapGrid Orientation="Horizontal" MaximumRowsOrColumns="2"/>
                        </ItemsPanelTemplate>
                    </GridView.ItemsPanel>
                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="vm:AppViewModel">
                            <Grid Width="250" Padding="8" ColumnSpacing="12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Image Source="{x:Bind Icon, Mode=OneWay}" Width="40" Height="40"/>
                                <TextBlock Grid.Column="1"
                                           Text="{x:Bind App.Name}"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"/>
                            </Grid>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>

                <!-- All Apps Section (shown when "All" is clicked) -->
                <StackPanel x:Name="AllAppsSection" Visibility="Collapsed">
                    <Grid Margin="0,16,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Content="&lt; Back"
                                Click="BackToPinned_Click"
                                Background="Transparent"
                                Padding="8,4"/>
                        <TextBlock Grid.Column="1"
                                   Text="All apps"
                                   Style="{StaticResource SubtitleTextBlockStyle}"
                                   HorizontalAlignment="Center"/>
                    </Grid>

                    <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                                  HorizontalAlignment="Center"/>

                    <ListView ItemsSource="{x:Bind ViewModel.AllApps}"
                              SelectedItem="{x:Bind ViewModel.SelectedApp, Mode=TwoWay}"
                              IsItemClickEnabled="True"
                              ItemClick="AllApp_Click"
                              SelectionMode="Single">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="vm:AppViewModel">
                                <Grid Padding="4" ColumnSpacing="12">
                                    <Grid.ContextFlyout>
                                        <MenuFlyout>
                                            <MenuFlyoutItem Text="Pin to Start" Click="PinApp_Click" Tag="{x:Bind}">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xE718;"/>
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>
                                            <MenuFlyoutItem Text="Unpin from Start" Click="UnpinApp_Click" Tag="{x:Bind}">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xE77A;"/>
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>
                                        </MenuFlyout>
                                    </Grid.ContextFlyout>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="32"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Image Source="{x:Bind Icon, Mode=OneWay}" Width="32" Height="32"/>
                                    <TextBlock Grid.Column="1"
                                               Text="{x:Bind App.Name}"
                                               VerticalAlignment="Center"
                                               TextTrimming="CharacterEllipsis"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        </Grid>

        <!-- Settings Page Container -->
        <ContentPresenter x:Name="SettingsContainer" Visibility="Collapsed"/>
    </Grid>
</Window>
